@page
@model ToDoWebApp_CodeBehind.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks</h1>

<p>
    <a asp-page="Add">Create New +</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDoModels.First().name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoModels.First().inStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoModels.First().id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToDoModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.inStock)
                </td>
                <td>
                    <a asp-page="./add" asp-route-id="@item.id">Edit</a>
                    <a asp-page="./delete" asp-route-id="@item.id" style="color:red">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>